<%= render "layouts/errors", :object => @recipe %>

<%= form_for [@recipe] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :instructions %>
  <%= f.text_area :instructions, size: "70x5", class: "form-control" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1.0..5.0, step: 1, class: "form-control" %>
  <hr>

  <h3><%= f.label :tags, "Categories" %></h3>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name%>
  <hr>
  <h3><%= f.label :ingredients %></h3>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name, class: "form-control" %>
  
  <p><%= f.submit class: "mt-3 btn btn-primary" %></p>
<% end %>

