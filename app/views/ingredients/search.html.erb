<% if @ingredients.any? %>
  <% recipe_ingredient = @ingredient.recipe_ids %>
  <% ingredient_id = @recipe.ingredient_ids.join %>
  <%= recipe_id = recipe_ingredient.first %>
  <%= @ingredients.each do |ingredient| %>
    <ul>
      <% if ingredient.name === params[:search] %>
        <li><%= Recipe.find(recipe_id).name %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>